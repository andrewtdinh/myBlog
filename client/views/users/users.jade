.row
  .col-xs-4
    form
      .form-group(ng-hide='name==="login"')
        label(for='userName') Username
        input#userName.form-control(type='text', name='userName', ng-model='user.userName')
      .form-group
        label(for='email') Email
        input#email.form-control(type='email', name='email', ng-model='user.email')
      .form-group
        label(for='password') Password
        input#password.form-control(type='password', name='password', ng-model='user.password')
      .form-group
        button.btn.btn-success(type='submit', ng-click='submit(user)', ng-show='name==="login"') Login
        button.btn.btn-default(type='submit', ng-click='submit(user)', ng-hide='name==="login"') Register
        
  .col-xs-8
