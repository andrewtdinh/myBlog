nav.navbar.navbar-default(ng-controller='NavCtrl')
  .container-fluid
    .navbar-header
      button#collapsed.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand#logo(ui-sref='home'): img(alt='logo', src='/assets/logo.png') 
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right(ng-hide='activeUser')
        li: a(ui-sref='home'): i.fa.fa-home.fa-lg &nbsp; Home
        li: a(ui-sref='about'): i.fa.fa-question-circle.fa-lg &nbsp; About Me
        li: a(ui-sref='register'): i.fa.fa-user-plus.fa-lg &nbsp; Register
        li: a(ui-sref='login'): i.fa.fa-key.fa-lg &nbsp; Login
      ul.nav.navbar-nav.navbar-right(ng-show='activeUser')
        li: a(ui-sref='home'): i.fa.fa-home.fa-lg &nbsp; Home
        li: a(ui-sref='about'): i.fa.fa-question-circle.fa-lg &nbsp; About Me
        li: a#newBlog(ui-sref='addBlog'): i.fa.fa-pencil-square-o.fa-lg &nbsp; New Blog
        li: a#logout.a-danger(href='#', ng-click='logout()'): i.fa.fa-sign-out.fa-lg Logout &nbsp;{{getEmailHandle(activeUser.password.email)}}
